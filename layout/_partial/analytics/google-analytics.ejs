<% if (theme.google_analytics) { %>
  <script src="https://www.googletagmanager.com/gtag/js?id=<%= theme.google_analytics %>"></script>
  <script data-pjax>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
      dataLayer.push(arguments);
    }

    gtag('js', new Date());
    gtag('config', '<%= theme.google_analytics %>');
  </script>
<% } %>
