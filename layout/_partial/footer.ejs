<footer id="footer">
  <div style="width: 100%; overflow: hidden">
    <div class="footer-line"></div>
  </div>
  <div id="footer-info">
    <% if (theme.copyright) { %>
      <%- render(theme.copyright, 'html'); %>
    <% } %>
    <div>
      <span class="icon-copyright"></span>
      <% const currentYear = new Date().getFullYear(); %>
      <% const sinceYear = parseInt(theme.footer.since, 10); %>
      <% if (sinceYear === currentYear) { %>
        <%= sinceYear %>
      <% } else { %>
        <%= sinceYear %>-<%= currentYear %>
      <% } %>
      <span class="footer-info-sep <%- theme.footer.icon?.rotate ? 'rotate' : '' %>"></span>
      <%= config.author || config.title %>
    </div>
    <% if (theme.footer.powered) { %>
      <div>
        <%= __('powered_by') %>&nbsp;<a href="https://hexo.io/" rel="noopener external nofollow noreferrer" target="_blank">Hexo</a>&nbsp;
        Theme.<a href="https://github.com/D-Sketon/hexo-theme-reimu" rel="noopener external nofollow noreferrer" target="_blank">Reimu</a>
      </div>
    <% } %>
    <% if (theme.footer.count) { %>
      <div>
        <span class="icon-brush"></span>
        <%= totalcount() %>
        &nbsp;|&nbsp;
        <span class="icon-coffee"></span>
        <%= totalmin2read() %>
      </div>
    <% } %>
    <% if (theme.icp.icpnumber) { %>
      <div class="footer-beian">
        <a target="_blank" rel="noopener external nofollow noreferrer" href="https://beian.miit.gov.cn" data-pjax-state=""><%= theme.icp.icpnumber %></a>
      </div>
    <% } %>
    <% if (theme.icp.beian && theme.icp.recordcode) { %>
      <div class="footer-beian">
        <img style="object-fit: contain;margin-right: 2px;" src="data:image/png;base64," alt="">
        <a target="_blank" rel="noopener external nofollow noreferrer" href="https://beian.mps.gov.cn/#/query/webSearch?code=<%= theme.icp.recordcode %>"><%= theme.icp.beian %></a>
      </div>
    <% } %>
    <% if (theme.footer.busuanzi) { %>
      <div>
        <span class="icon-eye"></span>
        <span id="busuanzi_container_site_pv"><%= __('busuanzi.pv') %>&nbsp;<span id="busuanzi_value_site_pv"></span></span>
        &nbsp;|&nbsp;
        <span class="icon-user"></span>
        <span id="busuanzi_container_site_uv"><%= __('busuanzi.uv') %>&nbsp;<span id="busuanzi_value_site_uv"></span></span>
      </div>
    <% } %>
  </div>
</footer>
