.sidebar-top
  position: fixed
  bottom: 30px
  right: 30px
  width: 50px
  height: 50px
  background-color: var(--color-wrap)
  border-radius: 50%
  font-family: font-icon
  box-shadow: 1px 2px 10px rgba(0, 0, 0, .2)
  z-index: 999

  img
    transition: .3s
    animation: rotate-all 3s linear infinite
    opacity: 1

  .arrow-up
    transition: .3s
    opacity: 0
    &:before
      width: 50px
      height: 50px
      position: absolute
      color: var(--red-1)
      font-size: 20px
      top: 0
      text-align: center
      line-height: 50px

  &:hover
    img
      opacity: 0
    .arrow-up
      opacity: 1