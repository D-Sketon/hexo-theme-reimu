@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"
@import "_util/animation"
@import "_extend"

global-reset()

h1, h2, h3, h4, h5, h6
  font-family: font-title
  font-weight: 700

input, button
  margin: 0
  padding: 0

  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  -webkit-text-size-adjust: 100%
  // font-family: FontAwesome
  font-family: font-sans

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background

  .mobile-nav-on &
    left: mobile-nav-width

#main
  padding: 0 5px

if sidebar
  #main
    @media mq-large
      padding: 0
      column(main-column)

@import "_partial/header"
@import "_partial/article"
@import "_partial/post"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/mobile"
@import "_partial/highlight"
@import "_partial/widget.styl"
@import "_partial/friend.styl"
@import "_partial/search.styl"

if sidebar
  @import "_partial/sidebar"

::-webkit-scrollbar
  width: 10px
  height: 10px
  background-color: #f5f5f5


::-webkit-scrollbar-track
  border-radius: 10px
  background-color: #f5f5f5


::-webkit-scrollbar-thumb
  border-radius: 10px
  background-color: red-3

.pace
  -webkit-pointer-events: none
  pointer-events: none
  -webkit-user-select: none
  -moz-user-select: none
  user-select: none

.pace-inactive
  display: none

.pace .pace-progress
  background: red-1
  position: fixed
  z-index: 2000
  top: 0
  right: 100%
  width: 100%
  height: 2px

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=" + font-icon-version) format("embedded-opentype"),
          url(font-icon-path + ".woff2?v=" + font-icon-version) format("woff2"),
          url(font-icon-path + ".woff?v=" + font-icon-version) format("woff"),
          url(font-icon-path + ".ttf?v=" + font-icon-version) format("truetype"),
          url(font-icon-path + ".svg?v=" + font-icon-version + "#fontawesomeregular") format("svg")
